
<div class="center">
  <div class="row">
    <% @products.each do |product| %>
       <div class="col-sm-6 col-md-4">
         <div class="thumbnail">
          <%= image_tag product.image.url(:medium) %>
          <h3><%= product.name %></h3>
          <!--<%= product.description %>-->
          <p><%= number_to_currency(product.price, :unit =>"â‚¬") %></p><br>
          <p><%= "Sold by: #{product.user.name}" %></p><br>
          <%= link_to 'Show', product %>
          <% if (user_signed_in?) && (current_user == product.user) %>
            <%= link_to 'Edit', edit_product_path(product) %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>     

         </div>
       </div>
    <% end %>
  </div>
</div>
<br>
<% if user_signed_in? %>
  <%= link_to 'New Product', new_product_path, class: "btn btn-link" %>
<% end %>      
    
  
  

